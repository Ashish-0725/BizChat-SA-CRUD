<%-include("../partials/header.ejs") %>
<%-include("../partials/sideBar.ejs") %>

<div class=" center-of-window">
<h1>Sub Admin</h1>
<form action="/admin/adminpanel/add" method="post">

    <div class="row mt-3">
       Name: <input type="text" class="form-control" name="name">
    </div>

    <div class="row mt-2">
        Email: <input type="text" class="form-control" name="username">
     </div>

     <div class="row mt-2">
        Password: <input type="password" class="form-control" name="password">
     </div>

     <div class="row mt-2">
        Reapeat Password: <input type="password" class="form-control" name="repeatpassword">
     </div>

     <div class="row mt-2">
        Token: <input type="text" class="form-control" name="token">
     </div>

     <div class="row mt-2">
        Description: <textarea name="description" class="form-control" id="" cols="30" rows="2"></textarea>
     </div>

     <div class="row mt-5 justify-content-center">
        <button class="btn btn-primary col-3" type="submit">Add</button>
     </div>

</form>
</div>


