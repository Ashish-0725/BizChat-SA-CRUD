<%-include("../partials/header.ejs") %>
<%-include("../partials/sideBar.ejs") %>

<div class=" center-of-window">
<h1>Edit Sub Admin</h1>
<form action="/admin/adminpanel/update/<%=user._id%>" method="post">

    <div class="row mt-3">
       Name: <input type="text" class="form-control" name="name" value="<%=user.name%>">
    </div>

    <div class="row mt-2">
        Email: <input type="text" class="form-control" name="username" value="<%=user.username%>">
     </div>

     <div class="row mt-2">
        Token: <input type="text" class="form-control" name="token" value="<%=user.personal_token%>">
     </div>

     
     <div class="row mt-2">
        Description: <textarea name="description" class="form-control" id="" cols="30" rows="2" value=""><%=user.description%></textarea>
      </div>
      


     <div class="row mt-5 justify-content-center">
        <button class="btn btn-primary col-3" type="submit">Edit</button>
     </div>

</form>
</div>


<%-include("../partials/footer.ejs") %>